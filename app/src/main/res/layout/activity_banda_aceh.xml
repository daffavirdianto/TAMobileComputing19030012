<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFDAEF"
    android:orientation="vertical"
    tools:context=".BandaAceh">

    <TextView
        android:layout_width="413dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#093B51"
        android:padding="10dp"
        android:gravity="center"
        android:text="Banda Aceh"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="413dp"
        android:layout_height="300dp"
        android:src="@drawable/aceh" />

    <TextView
        android:layout_width="413dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#093B51"
        android:padding="10dp"
        android:text="    Masjid Raya Baiturrahman"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:text="Masjid Raya Baiturrahman adalah sebuah Masjid Kesultanan Aceh yang dibangun oleh Sultan Iskandar Muda Mahlota Alam pada tahun 1612 masehi. Bangunan indah dan megah yang mirip dengan Taj Mahal di India ini terletak tepat di jantung kota Banda Aceh dan menjadi titik pusat dari segala kegiatan di Nangroe Aceh Darussalam."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16dp" />


</LinearLayout>